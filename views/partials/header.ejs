<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Patarhi</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/language.js" defer></script>
  <script src="/js/enter-submit.js" defer></script>
</head>
<body>
<header class="site-header">
  <div class="left">
    <a href="/" style="display: flex; align-items: center;">
      <img src="/uploads/patahari_logo.jpg" alt="logo" class="logo" onerror="this.style.display='none'">
    </a>
  </div>
  <div class="center">
    <a href="/" style="text-decoration: none; color: inherit;">
      <h1>आदर्श ग्राम पताढ़ी</h1>
    </a>
  </div>
  <nav class="right">
    <a href="/" data-translate="home">होम</a>
    <a href="/details" data-translate="getDetails">विवरण प्राप्त करें</a>
    <a href="/gallery" data-translate="gallery">गैलरी</a>
    <% if (user) { %>
      <a href="/profile" data-translate="profile">प्रोफ़ाइल</a>
      <% if (user.isAdmin) { %><a href="/admin" data-translate="admin">एडमिन</a><% } %>
      <a href="/logout" data-translate="logout">लॉगआउट</a>
    <% } else { %>
      <a href="/register" data-translate="register">रजिस्टर करें</a>
      <a href="/login" data-translate="login">लॉगिन</a>
    <% } %>
    
    <!-- Language Switcher -->
    <div class="language-switcher">
      <button id="langBtn" class="lang-btn" title="Switch Language">
        <span id="currentLang">हिं</span>
      </button>
    </div>
  </nav>
</header>
<main class="main">
