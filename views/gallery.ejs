<%- include('partials/header') %>

<section class="card">
  <h2>Village Gallery</h2>

  <% if (!photos || photos.length===0) { %>
    <p style="text-align:center">No photos yet.</p>
  <% } else { %>
    <div class="gallery-grid">
      <% photos.forEach(p => { %>
        <div class="photo-card">
          <img src="<%= p.url || '/uploads/' + p.filename %>" alt="photo" class="gallery-image" data-src="<%= p.url || '/uploads/' + p.filename %>">
          <% if (p.uploadedBy) { %>
            <div class="meta">Uploaded by: <%= p.uploadedBy %></div>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>

<!-- Advanced Image Modal -->
<div id="imageModal" class="image-modal">
  <span class="modal-close">&times;</span>
  
  <!-- Navigation Buttons -->
  <button class="modal-nav modal-prev" id="prevBtn">&#10094;</button>
  <button class="modal-nav modal-next" id="nextBtn">&#10095;</button>
  
  <!-- Image Container -->
  <div class="modal-image-container">
    <img class="modal-content" id="modalImage">
  </div>
  
  <!-- Control Buttons -->
  <div class="modal-controls">
    <button class="control-btn" id="zoomInBtn" title="Zoom In">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
        <path d="M12 10h-2v2H9v-2H7V9h2V7h1v2h2v1z"/>
      </svg>
    </button>
    <button class="control-btn" id="zoomOutBtn" title="Zoom Out">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14zM7 9h5v1H7z"/>
      </svg>
    </button>
    <button class="control-btn" id="resetZoomBtn" title="Reset Zoom">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
        <path d="M12 5V1L7 6l5 5V7c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z"/>
      </svg>
    </button>
    <button class="control-btn" id="downloadBtn" title="Download">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
        <path d="M19 12v7H5v-7H3v7c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-7h-2zm-6 .67l2.59-2.58L17 11.5l-5 5-5-5 1.41-1.41L11 12.67V3h2z"/>
      </svg>
    </button>
  </div>
  
  <!-- Image Counter -->
  <div class="image-counter" id="imageCounter"></div>
</div>

<script src="/js/gallery.js"></script>
<%- include('partials/footer') %>
