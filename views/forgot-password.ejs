<%- include("partials/header") %>

<div class="forgot-wrapper">
  <div class="forgot-card">
    <h2>Forgot Password</h2>

    <% if (error) { %>
      <div style="color: red; margin-bottom: 10px">
        <%= error %>
      </div>
    <% } %>

    <% if (success) { %>
      <div style="color: green; margin-bottom: 10px">
        <%= success %>
      </div>
    <% } %>

    <form action="/forgot-password" method="POST" class="form">
      <label>Enter your mobile number</label>
      <input name="mobile" type="text" required />
      
      <label>Enter your birth year</label>
      <input name="birthYear" type="text" placeholder="e.g., 1990" maxlength="4" required />
      
      <button type="submit" class="btn">Verify & Reset Password</button>
    </form>

    <p style="text-align: center; margin-top: 12px">
      <a href="/login" class="btn outline">Back to Login</a>
    </p>
  </div>
</div>

<%- include("partials/footer") %>
